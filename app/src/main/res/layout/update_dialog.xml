<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:alpha="0.8"
    app:cardBackgroundColor="@android:color/black"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Story"
            android:textSize="23sp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:textStyle="bold"
            />

        <View
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#33000000"
            />

        <EditText
            android:padding="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            android:background="@drawable/story_et_bg"
            android:hint="Story Title..."
            android:textColorHint="#7E7A7A"
            />

        <EditText
            android:padding="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/white"
            android:background="@drawable/story_et_bg"
            android:hint="Story Content..."
            android:textColorHint="#7E7A7A"
            />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_update_cancel"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#CD6161"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Cancel"
                    />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_update_process"
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#6EB3C3"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Update"
                    />

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>